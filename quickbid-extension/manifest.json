{
  "manifest_version": 3,
  "name": "QuickBid AI: Freelance Proposal Generator",
  "version": "1.3.0",
  "description": "Generate personalized freelance proposals using AI. Upload resume or import from LinkedIn for instant profile setup.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://*.upwork.com/*",
    "https://*.fiverr.com/*",
    "https://*.freelancer.com/*",
    "https://*.linkedin.com/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
